- extends 'subterreader/base.html.haml'

- block head
  <script type="text/javascript" src="{{ STATIC_URL }}subterreader/read.js"></script>
  <script type="text/javascript">
    $(document).ready(function () {
      {% for document in documents_list %}
      load_url_to_container('{{ document.url }}', $('#container-{{ forloop.counter0 }}'));
      {% endfor %}
      });
  </script>

- block content
  - if documents_list
    - include 'subterreader/read_controls.html.haml' with index=0 total=documents_list.length
    - for document in documents_list
      %div
        %hr
        %p {{ document.url }}
        %div{'id': "container-{{ forloop.counter0 }}"} &nbsp;
        %hr
        - include 'subterreader/read_controls.html.haml' with index=forloop.counter total=documents_list.length
    - else
      %p No documents are available.
